<?xml version="1.0" encoding="UTF-8"?>
<tc:tc-config xmlns:tc="http://www.terracotta.org/config"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-4.xsd">

    <servers>
        <server host="%i" name="org.terracotta.modules.sample-hostname"/>
        <update-check>
            <enabled>true</enabled>
        </update-check>
    </servers>

    <system>
        <configuration-model>development</configuration-model>
    </system>

    <clients>
        <modules>
            <module name="tim-masterworker" version="1.3.0-SNAPSHOT" group-id="org.terracotta.modules"/>
            <module name="tim-synchronizedcollection" version="2.3.4" group-id="org.terracotta.modules"/>
        </modules>
        <logs>%(user.home)/terracotta/client-logs/org.terracotta.modules.sample/%D</logs>
    </clients>


    <application>
        <dso>
            <instrumented-classes>
                <include>
                    <class-expression>com.griddynamics.terracotta.ParserLogWorkOld</class-expression>
                </include>
                <include>
                    <class-expression>com.griddynamics.terracotta.Aggregator</class-expression>
                </include>
            </instrumented-classes>
            <locks>
                <autolock>
                    <method-expression>* com.griddynamics.terracotta.ParserLogWorkOld.get*(..)
                    </method-expression>
                    <lock-level>read</lock-level>
                </autolock>
                <autolock>
                    <method-expression>* com.griddynamics.terracotta.ParserLogWorkOld.set*(..)
                    </method-expression>
                    <lock-level>write</lock-level>
                </autolock>
                <!--<autolock>-->
                <!--<method-expression>* com.griddynamics.terracotta.works.CalculationPerUserWork.*Time(..)-->
                <!--</method-expression>-->
                <!--</autolock>-->
                <!--<autolock>-->
                <!--<method-expression>* com.griddynamics.terracotta.works.CalculationPerNodeWork.*Result(..)-->
                <!--</method-expression>-->
                <!--</autolock>-->
                <!--<autolock>-->
                <!--<method-expression>* com.griddynamics.terracotta.core.StatisticCalculator.addCurrentUserStat(..)-->
                <!--</method-expression>-->
                <!--</autolock>-->
            </locks>

            <!--<transient-fields>-->
                <!--<field-name>com.griddynamics.terracotta.BatchWork.context</field-name>-->
                <!--<field-name>com.griddynamics.terracotta.BatchWork.launcher</field-name>-->
                <!--<field-name>com.griddynamics.terracotta.BatchWork.jobLocator</field-name>-->
            <!--</transient-fields>-->

        </dso>
    </application>
</tc:tc-config>
